@model TaskFlow.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h2 class="text-danger">Delete Confirmation</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this task?</strong>
</div>

<div class="card border-danger mb-4">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <h6 class="card-subtitle mb-2 text-muted">Due: @Model.DueDate.ToShortDateString()</h6>
        <p class="card-text">@Model.Description</p>
        <span class="badge bg-@(Model.IsComplete ? "success" : "danger")">
            @(Model.IsComplete ? "✔ Complete" : "❌ Incomplete")
        </span>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
